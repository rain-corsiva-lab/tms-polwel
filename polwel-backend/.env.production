# Production Environment
NODE_ENV=production
PORT=3001

# Database Configuration
DATABASE_URL="postgresql://prod_user:prod_password@localhost:5432/polwel_production_db"

# JWT Configuration
JWT_SECRET=production-super-secure-jwt-secret-key
JWT_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=https://your-production-domain.com

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=production@yourdomain.com
SMTP_PASS=

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=200

# Security
BCRYPT_ROUNDS=14

# Logging
LOG_LEVEL=error
