# Production Environment
NODE_ENV=production
PORT=3001

# Database Configuration - Production MySQL
# IMPORTANT: Use strong, secure credentials for production
DATABASE_URL="mysql://your_prod_db_user:your_super_secure_password@localhost:3306/polwel_training"

# JWT Configuration
# IMPORTANT: Use a very strong, unique secret for production
JWT_SECRET=your-super-secure-production-jwt-secret-minimum-64-characters
JWT_EXPIRES_IN=7d

# CORS Configuration - Production domain
# IMPORTANT: Update with your actual production domain
CORS_ORIGINS=https://your-production-domain.com
FRONTEND_URL=https://your-production-domain.com

# Email Configuration - Production SMTP
# IMPORTANT: Use production-grade email service
MAIL_MAILER=smtp
MAIL_HOST=smtp.your-email-provider.com
MAIL_PORT=465
MAIL_USERNAME=your-production-email@your-domain.com
MAIL_PASSWORD=your-production-email-password
MAIL_ENCRYPTION=SSL
MAIL_FROM_ADDRESS=noreply@your-domain.com
MAIL_FROM_NAME="POLWEL Training System"

# Legacy email config (kept for compatibility)
SMTP_HOST=smtp.your-email-provider.com
SMTP_PORT=465
SMTP_USER=your-production-email@your-domain.com
SMTP_PASS=your-production-email-password
SMTP_FROM=noreply@your-domain.com

# File Upload Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880

# Rate Limiting - More restrictive for production
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=50

# Debug Configuration - Minimal logging for production
LOG_LEVEL=error
ENABLE_QUERY_LOGGING=false
