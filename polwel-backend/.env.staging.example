# Staging Environment
NODE_ENV=staging
PORT=3001

# Database Configuration - Staging MySQL
# IMPORTANT: Update with your staging database credentials
DATABASE_URL="mysql://your_staging_db_user:your_staging_password@localhost:3306/polwel_training"

# JWT Configuration
# IMPORTANT: Use a strong, unique secret for staging
JWT_SECRET=your-unique-staging-jwt-secret-here
JWT_EXPIRES_IN=7d

# CORS Configuration - Staging domain
# IMPORTANT: Update with your actual staging domain
CORS_ORIGINS=https://your-staging-domain.com
FRONTEND_URL=https://your-staging-domain.com

# Email Configuration
# IMPORTANT: Update with your staging SMTP settings
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=465
MAIL_USERNAME=your-staging-email@gmail.com
MAIL_PASSWORD=your-staging-email-app-password
MAIL_ENCRYPTION=SSL
MAIL_FROM_ADDRESS=your-staging-email@gmail.com
MAIL_FROM_NAME="POLWEL Training System (Staging)"

# Legacy email config (kept for compatibility)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
SMTP_USER=your-staging-email@gmail.com
SMTP_PASS=your-staging-email-app-password
SMTP_FROM=your-staging-email@gmail.com

# File Upload Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Debug Configuration
LOG_LEVEL=info
ENABLE_QUERY_LOGGING=false
